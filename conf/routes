# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                             controllers.Application.index
GET           /signup                       controllers.Authentication.signup
GET           /signout                      controllers.Authentication.signout
GET           /maptest                      controllers.Application.maptest
GET           /route                        controllers.Maps.index
#GET           /route/:id                    controllers.Maps.show(id:String)
GET           /tracks                       controllers.Tracks.tracks
GET           /newtracks                    controllers.Tracks.newtracks
GET           /profile                      controllers.Account.showAccount
#POST           /route/:id                    controllers.Maps.update(id:String)
POST          /changePassword               controllers.Account.changePassword
POST          /changeUserCredentials        controllers.Account.changeUserCredentials
POST          /saveTracks                   controllers.Tracks.saveTracks
POST          /getTrack/:id                 controllers.Tracks.getTrack(id:String)
POST          /login                        controllers.Authentication.authenticate
POST          /register                     controllers.Authentication.register
POST          /route                        controllers.Maps.create
#DELETE        /route/:id                    controllers.Maps.delete(id:String)
GET           /bikes                        controllers.Bikes.index
GET           /bike/new                     controllers.Bikes.add
POST          /bike                         controllers.Bikes.update

#POST        /waypoints                    controllers.Waypoints.create


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                 controllers.Assets.at(path="/public", file)
